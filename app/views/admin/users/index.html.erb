<p><%= link_to 'New User', new_admin_user_path, :class => ["btn", "btn-primary"] %></p>

<table class="table table-striped table-bordered">
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th></th>
    <th></th>
  </tr>
  <% for user in @users %>
    <tr class="<%= cycle("", "alternate") %>">
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td class="center"><%= link_to '<i class="icon-pencil"></i> Edit'.html_safe, edit_admin_user_path(user) %></td>
      <td class="center"><%= link_to '<i class="icon-remove"></i> Delete'.html_safe, admin_user_path(user), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
