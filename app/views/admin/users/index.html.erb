<p><%= link_to 'New User', new_admin_user_path, :class => ["btn", "btn-primary"] %></p>

<table class="table table-striped table-bordered">
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th></th>
    <th></th>
  </tr>
  <% for user in @users %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td class="text-center"><%= link_to iconify(:icon_pencil, "Edit"), edit_admin_user_path(user) %></td>
      <td class="text-center"><%= link_to iconify(:icon_remove, "Delete"), admin_user_path(user), data: { :confirm => 'Are you sure?' }, :method => :delete %></td>
    </tr>
  <% end %>
</table>
