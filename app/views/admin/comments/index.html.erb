<p class="bordered"><%= link_to 'Delete All Spam', admin_comment_path("all"), :confirm => 'Are you sure?', :method => :delete %></p>

<table>
  <tr>
    <th>Comment</th>
    <th>Name</th>
    <th>Email</th>
    <th>Website</th>
    <th>Spam</th>
    <th></th>
    <th></th>
  </tr>
  <% for comment in @comments %>
    <tr class="<%= cycle("", "alternate") %>">
      <td><%= comment.body %></td>
      <td><%= comment.name %></td>
      <td><%= comment.email %></td>
      <td><%= comment.website %></td>
      <td><%= comment.spam ? "Yes" : "No" %></td>
      <td><%= link_to comment.spam ? "Approve" : "Reject", toggle_admin_comment_path(comment), :method => :post %>
      <td><%= link_to 'Delete', admin_comment_path(comment), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
