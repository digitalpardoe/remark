<p class="bordered"><%= link_to 'Upload File', new_admin_document_path %></p>

<table>
  <tr>
    <th>Filename</th>
    <th>Size</th>
    <th>Content Type</th>
    <th></th>
  </tr>
  <% for document in @documents %>
    <tr class="<%= cycle("", "alternate") %>">
      <td><%= link_to "#{document.name}.#{document.extension}", "/files/#{document.name}.#{document.extension}" %></td>
      <td><%= document.size %></td>
      <td><%= document.content_type %></td>
      <td><%= link_to 'Delete', admin_document_path(document), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
