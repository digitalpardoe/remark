<p><%= link_to 'New Page', new_admin_page_path, :class => ["btn", "btn-primary"] %></p>

<table class="table table-striped table-bordered">
  <tr>
    <th>Title</th>
    <th>Creator</th>
    <th>Permalink</th>
    <th>Published</th>
    <th>Hidden</th>
		<th></th>
    <th></th>
    <th></th>
  </tr>
  <% for page in @pages %>
    <tr class="<%= cycle("", "alternate") %>">
      <td><%= page.title %></td>
      <td><%= page.user.username %></td>
      <td><%= page.permalink %></td>
      <td><%= !page.draft ? page.published_at.to_s(:admin) : "Not Published" %></td>
      <td><%= page.hidden ? "Yes" : "No" %></td>
			<td>
				<%= link_to "&uarr;".html_safe, up_admin_page_path(page, :sort_order => 'up') %>
				<%= link_to "&darr;".html_safe, down_admin_page_path(page, :sort_order => 'down') %></td>
      <td><%= link_to 'Edit', edit_admin_page_path(page) %></td>
      <td><%= link_to 'Delete', admin_page_path(page), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
