<p><%= link_to 'New Page', new_admin_page_path, :class => ["btn", "btn-primary"] %></p>

<table class="table table-striped table-bordered">
  <tr>
    <th>Title</th>
    <th>Creator</th>
    <th>Permalink</th>
    <th>Published</th>
    <th class="center">Hidden</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% for page in @pages %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.user.username %></td>
        <td><%= page.permalink %></td>
        <td><%= !page.draft ? page.published_at.zoned.to_s(:admin) : "Not Published" %></td>
        <td class="center"><%= page.hidden ? iconify(:icon_ok) : "" %></td>
        <td class="center">
          <%= link_to iconify(:icon_arrow_up), up_admin_page_path(page, :sort_order => 'up') %>
          <%= link_to iconify(:icon_arrow_down), down_admin_page_path(page, :sort_order => 'down') %></td>
        <td class="center"><%= link_to iconify(:icon_pencil, "Edit"), edit_admin_page_path(page) %></td>
        <td class="center"><%= link_to iconify(:icon_remove, "Delete"), admin_page_path(page), :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
  <% end %>
</table>
