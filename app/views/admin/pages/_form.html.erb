<%= error_messages_for(@page) %>

<table>
  <tr>
    <td><%= f.label :title %></td>
    <td><%= f.text_field :title %></td>
  </tr>
  <tr>
    <td><%= f.label :body %></td>
    <td><%= f.text_area :body %></td>
  </tr>
  <tr>
    <td><%= f.label :permalink %></td>
    <td><%= f.text_field :permalink %></td>
  </tr>
  <tr>
    <td><%= f.label :draft %></td>
    <td><%= f.check_box :draft %></td>
  </tr>
  <tr>
    <td><%= f.label :published %></td>
    <td><%= f.datetime_select :published %></td>
  </tr>
  <tr>
    <td><%= f.label :page_id, "Parent Page" %></td>
    <td><%= f.select(:page_id, @pages.collect { |page| [ page.title, page.id ] }, { :include_blank => true } ) %></td>
  </tr>
</table>

<%= f.submit %>