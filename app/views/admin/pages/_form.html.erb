<%= error_messages_for(@page) %>

<%= markitup(f, :body, :toggle => 'text_filter') %>
<%= anytime(f, :published) %>

<table>
  <tr>
    <td><%= f.label :title %></td>
    <td><%= f.text_field :title %></td>
  </tr>
  <tr>
    <td><%= f.label :body %></td>
    <td><%= f.text_area :body %></td>
  </tr>
  <tr>
    <td><%= f.label :permalink %></td>
    <td><%= f.text_field :permalink %></td>
  </tr>
  <tr>
    <td><%= f.label :draft %></td>
    <td><%= f.check_box :draft %></td>
  </tr>
  <tr>
    <td><%= f.label :published %></td>
    <td><%= f.text_field :published, :value => @page.published.to_s(:anytime) %></td>
  </tr>
  <tr>
    <td><%= f.label :hidden %></td>
    <td><%= f.check_box :hidden %></td>
  </tr>
  <tr>
    <td><%= f.label :text_filter %></td>
    <td><%= f.select :text_filter, TEXT_FILTERS.collect { |tf| [tf[:human_readable], tf[:name]]}, { :selected => f.object.text_filter ? f.object.text_filter : Setting.application.value(:text_filter) } %></td>
  </tr>
</table>

<%= f.submit %>